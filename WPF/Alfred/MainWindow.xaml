<Window x:Class="Alfred.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="result" Margin="5" />
        <TextBox x:Name="input" MaxHeight="25" Grid.Row="1" Margin="5" PreviewKeyDown="Input_KeyDown" />
        <Button Click="Send_Click" Content="Send" MaxHeight="25" Grid.Row="2" Margin="5" />
    </Grid>
</Window>
